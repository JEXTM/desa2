@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Login</h2>
@model SRCDO.Models.user

@using (Html.BeginForm("Login", "Client"))
{
    <div class="form-group">
        <div class="col-md-4">
            <label for="nickname">Usuario:</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.nickname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <label for="pass">Contraseña:</label>
        </div>
        <div class="col-md-8">
            @Html.PasswordFor(m => m.pass, new { @class = "form-control" })
        </div>
    </div>
    <input type="submit" value="Iniciar" class="btn btn-success" />
}
